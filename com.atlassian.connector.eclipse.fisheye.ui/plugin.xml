<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.mylyn.tasks.ui.repositories">
      <connectorCore
            class="com.atlassian.connector.eclipse.internal.fisheye.core.FishEyeRepositoryConnector"
            id="fisheye"
            name="FishEye">
      </connectorCore>
      <connectorUi
            brandingIcon="icons/obj16/fisheye-16.png"
            class="com.atlassian.connector.eclipse.internal.fisheye.ui.FishEyeRepositoryConnectorUi"
            id="fisheye"
            name="FishEye"
            overlayIcon="icons/obj16/fisheye-overlay.png">
      </connectorUi>
   </extension>
   
   <!-- I don't know how to achieve the same using new Eclipse command API. Would be great to migrate it 
   without losing any functionality to command API  -->
   <extension
         point="org.eclipse.ui.popupMenus">
      
		<!-- copying FishEye link to clipboard -->
      <objectContribution
            objectClass="com.atlassian.connector.eclipse.fisheye.ui.IFishEyeResource"
            adaptable="true"
            id="com.atlassian.connector.eclipse.internal.fisheye.ui.CopyFishEyeLinkObjectContribution">
         <action
               label="Copy FishEye Link to Clipboard"
               tooltip="Copy FishEye Link to Clipboard"
               class="com.atlassian.connector.eclipse.internal.fisheye.ui.action.CopyFishEyeLinkAction"
               menubarPath="team.main/group9"
               enablesFor="1"
               id="com.atlassian.connector.eclipse.internal.fisheye.ui.CopyFishEyeLinkFromEditorObjectAction">
         </action>
      </objectContribution>

		<!-- opening in FishEye -->
      <objectContribution
            objectClass="com.atlassian.connector.eclipse.fisheye.ui.IFishEyeResource"
            adaptable="true"
            id="com.atlassian.connector.eclipse.internal.fisheye.ui.OpenInFishEyeObjectContribution">
         <action
               label="Open in FishEye"
               tooltip="Open in FishEye"
               class="com.atlassian.connector.eclipse.internal.fisheye.ui.action.OpenInFishEyeLinkAction"
               menubarPath="team.main/group9"
               enablesFor="1"
               icon="icons/obj16/fisheye-16.png"
               id="com.atlassian.connector.eclipse.internal.fisheye.ui.OpenInFishEyeFromEditorObjectAction">
         </action>
      </objectContribution>
      
   </extension>

