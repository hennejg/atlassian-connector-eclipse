<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         id="org.eclipse.mylar.jira.repository"
         name="JIRA Repository"
         point="org.eclipse.mylar.tasklist.repositories">

      <repositoryClient
            class="org.eclipse.mylar.internal.jira.JiraRepositoryClient"
            id="org.eclipse.mylar.jira.tasklist.repositories"
            name="JIRA Repository Client"
            type="jira"/>
   </extension> 


   <extension point="org.eclipse.mylar.tasklist.providers">
      <taskHandler
            externalizerClass="org.eclipse.mylar.internal.jira.JiraTaskExternalizer"
            id="org.eclipse.mylar.jira.ui.tasklist"
            >
      </taskHandler>
   </extension>
   

</plugin>
